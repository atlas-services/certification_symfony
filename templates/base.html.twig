<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
            <script src="{{ asset('js/custom_form.js') }}" ></script>
  
        {% endblock %}
    </head>
    <body>
        {% block body %}
                {% block nav %}
                    <nav class="col-12 col-sm-8 mt-2 mx-auto navbar navbar-expand-lg bg-info rounded-2">
                        <div class="container-fluid">
                            <a class="text-decoration-none link-success px-4" href="/{{ app.request.locale }}">{{ 'homepage'|trans }}</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        {{ 'head.preparation'|trans }}
                                    </a>
                                    <ul class="dropdown-menu">

                                        {% for route in allroutes %}
                                            <li><a class="dropdown-item" href="{{ path(route, {'_locale': app.request.locale}) }}">{{ route }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>
                                {% include 'switcher.html.twig' %}
                            </ul>
                            </div>
                        </div>
                    </nav>
                {% endblock %}        
        {% endblock %}
    </body>
</html>

